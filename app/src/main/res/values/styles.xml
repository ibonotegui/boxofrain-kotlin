<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/cooper_hewitt_light</item>
        <item name="android:textColor">@color/grey</item>

        <!--EditText hint color-->
        <item name="android:textColorHint">@color/blue</item>
        <!-- TextInputLayout text color-->
        <item name="colorControlActivated">@color/blue</item>
        <!-- EditText line color when EditText on-focus-->
        <item name="colorControlHighlight">@color/blue</item>
        <!-- EditText line color when EditText in un-focus-->
        <item name="colorControlNormal">@color/purple</item>

    </style>

    <style name="BoxTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="BoxTextView.Medium">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="BoxTextView.Small">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="BoxTextView.Large">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="BoxTextView.XLarge">
        <item name="android:textSize">@dimen/text_xlarge</item>
    </style>

    <style name="BoxDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/blue_light</item>
    </style>

</resources>
